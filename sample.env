# ============================================
# Video Service Configuration - ALL FEATURES ENABLED
# ============================================

VIDEO_SERVICE_INPUT_VIDEO_PATH=D:/Projects/AutoVideoPlatform/video-service/videos/video3.mp4
VIDEO_SERVICE_MIN_HIGHLIGHT_DURATION_SEC=30
VIDEO_SERVICE_MIN_SCENE_DURATION_SEC=10

# Core Features (ALL ENABLED)
VIDEO_SERVICE_ENABLE_STT=true
VIDEO_SERVICE_ENABLE_SENTIMENT=true
VIDEO_SERVICE_ENABLE_HUMOR=true
VIDEO_SERVICE_ENABLE_YAMNET=true
VIDEO_SERVICE_ENABLE_CANDIDATES=true
VIDEO_SERVICE_ENABLE_LLM_REFINE=true
VIDEO_SERVICE_ENABLE_VIRAL_MOMENTS=true
VIDEO_SERVICE_ENABLE_SPEECH_QUALITY=true

# ============================================
# CUDA / GPU Settings
# ============================================
VIDEO_SERVICE_DEVICE=cuda
VIDEO_SERVICE_WHISPER_DEVICE=cuda
VIDEO_SERVICE_TORCH_DEVICE=cuda
VIDEO_SERVICE_USE_FP16=true

# ============================================
# LLM Settings
# ============================================
VIDEO_SERVICE_LLM_ENABLED=true
VIDEO_SERVICE_LLM_BASE_URL=http://localhost:11434
VIDEO_SERVICE_LLM_MODEL=qwen2.5-coder:1.5b
VIDEO_SERVICE_LLM_TIMEOUT_SECONDS=60.0
VIDEO_SERVICE_LLM_RETRIES=2
VIDEO_SERVICE_LLM_TEMPERATURE=0.0
VIDEO_SERVICE_LLM_MAX_INPUT_CHARS=2000
VIDEO_SERVICE_BLOCK_ANALYSIS_ENABLED=true
VIDEO_SERVICE_BLOCK_ANALYSIS_MAX_BLOCKS_PER_REQUEST=6
VIDEO_SERVICE_BLOCK_ANALYSIS_MAX_TEXT_PER_BLOCK=500

# ============================================
# YAMNet / Laughter Detection Settings
# ============================================
VIDEO_SERVICE_YAMNET_THRESHOLD=0.3
VIDEO_SERVICE_LAUGHTER_THRESHOLD=0.3

# ============================================
# Candidate Selection
# ============================================
VIDEO_SERVICE_CANDIDATES_MAX_COUNT=50
VIDEO_SERVICE_CANDIDATES_MIN_DURATION=10.0
VIDEO_SERVICE_CANDIDATES_MAX_DURATION=120.0
VIDEO_SERVICE_CANDIDATES_INTEREST_THRESHOLD=0.6
VIDEO_SERVICE_CANDIDATES_LAUGHTER_THRESHOLD=0.5

# ============================================
# LLM Refine
# ============================================
VIDEO_SERVICE_LLM_REFINE_MAX_PER_REQUEST=5
VIDEO_SERVICE_LLM_REFINE_MAX_RETRIES=3
VIDEO_SERVICE_LLM_REFINE_BACKOFF_SECONDS=2.0
VIDEO_SERVICE_LLM_REFINE_CONTEXT_WINDOW_SECONDS=15.0

# ============================================
# DAG Pipeline Settings
# ============================================
VIDEO_SERVICE_ENABLE_PARALLEL=true
VIDEO_SERVICE_NUM_WORKERS=8
VIDEO_SERVICE_PIPELINE_MODE=full

# Batch sizes for ML models (optimized for GPU)
VIDEO_SERVICE_BATCH_SIZE_STT=64
VIDEO_SERVICE_BATCH_SIZE_SENTIMENT=128
VIDEO_SERVICE_BATCH_SIZE_LLM=10

# ============================================
# Speech Quality Analysis
# ============================================
VIDEO_SERVICE_SPEECH_QUALITY_VAD_THRESHOLD=0.5

# ============================================
# Interest Formula Weights (7 components)
# ============================================
VIDEO_SERVICE_INTEREST_WEIGHT_MOTION=0.20
VIDEO_SERVICE_INTEREST_WEIGHT_LOUDNESS=0.18
VIDEO_SERVICE_INTEREST_WEIGHT_ENERGY=0.15
VIDEO_SERVICE_INTEREST_WEIGHT_SENTIMENT=0.15
VIDEO_SERVICE_INTEREST_WEIGHT_CLARITY=0.12
VIDEO_SERVICE_INTEREST_WEIGHT_SPEECH_PROB=0.10
VIDEO_SERVICE_INTEREST_WEIGHT_LOUD_SOUND=0.10

# ============================================
# Viral Clips Settings
# ============================================
VIDEO_SERVICE_MIN_CLIP_DURATION=15.0
VIDEO_SERVICE_MAX_CLIP_DURATION=60.0
VIDEO_SERVICE_MIN_GAP_SECONDS=30.0
VIDEO_SERVICE_MAX_VIRAL_CLIPS=8

# ============================================
# Clip Scoring Weights (7 components)
# ============================================
VIDEO_SERVICE_CLIP_WEIGHT_HOOK=0.20
VIDEO_SERVICE_CLIP_WEIGHT_PACE=0.15
VIDEO_SERVICE_CLIP_WEIGHT_INTENSITY=0.15
VIDEO_SERVICE_CLIP_WEIGHT_CLARITY=0.15
VIDEO_SERVICE_CLIP_WEIGHT_EMOTION=0.15
VIDEO_SERVICE_CLIP_WEIGHT_BOUNDARY=0.10
VIDEO_SERVICE_CLIP_WEIGHT_MOMENTUM=0.10
